{% extends '/base/default.twig' %}

{% block content %}

	<div class="card">
    <div class="card-header"><h4>Register</h4></div>
    <div class="card-body">
      <p class="card-text">
        <form action="{{ path_for('auth.register') }}" method="POST">
          <div class="form-group">
            <label for="name">Username</label>
            <input type="text" class="form-control{{ errors.name ? ' is-invalid' : ''}}" id="name" placeholder="name" name="name" value="{{oldinput.name}}">
            {% if errors.name %}
              <small class="help-block">{{ errors.name | first }}</small>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control{{ errors.email ? ' is-invalid' : ''}}" id="email" aria-describedby="emailHelp" placeholder="Enter email" name="email" value="{{oldinput.email}}">
            {% if errors.email %}
              <small class="help-block">{{ errors.email | first }}</small>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control{{errors.password ? ' is-invalid' : ''}}" id="password" placeholder="Password" name="password">
            {% if errors.password %}
              <small class="help-block">{{ errors.password | first }}</small>
            {% endif %}
          </div>
          
          {{csrfv.field | raw}}

          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </p>
    </div>
  </div>
	
{% endblock %}